<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.mcworlduser.Activities.AppIntroActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/intro_logo"/>


        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="@color/dark"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18dp"
            android:text="Deliver quickly to Your doorstep"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="@color/dark"
            android:textStyle="normal"
            android:gravity="center"
            android:textSize="15dp"
            android:text="Ready to order from top restaurants?"/>


        <Button
             android:id="@+id/btnSelectLocation"
             android:layout_width="match_parent"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_marginTop="40dp"
             android:translationZ="5dp"
             android:textSize="15dp"
             android:textStyle="bold"
             android:textColor="@color/white"
             android:text="Set delivery location"
             android:background="@drawable/btn_select_location"
             android:layout_height="55dp"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtAlreadyHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:textColor="@color/dark"
        android:textStyle="normal"
        android:gravity="center"
        android:textSize="16dp"
        android:text="Have an Account? Login"/>
    </RelativeLayout>
</RelativeLayout>