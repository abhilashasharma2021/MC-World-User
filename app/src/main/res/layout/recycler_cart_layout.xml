<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:elevation="8dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="6dp">



        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tx_productName"
                android:layout_width="150dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/open_sans_regular"
                android:text="Food item "
                android:textColor="@color/black" />
            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="5dp"
                android:background="?actionBarItemBackground"
                android:padding="12dp"
                android:src="@drawable/cross" />

            <TextView
                android:id="@+id/txt_sym5"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/txt_amount"
                android:layout_height="wrap_content"
                android:text="â‚¹"
                android:layout_below="@+id/rl_new"
                android:visibility="visible"
               android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans_regular"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_amount"
                android:layout_width="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/img_delete"
                android:text="-"
                android:layout_below="@+id/rl_new"
                android:visibility="visible"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans_regular"
                android:textColor="@color/black"
                android:textSize="15sp" />



            <RelativeLayout
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/img_delete"
                android:layout_marginTop="15dp"
                android:id="@+id/rl_new"
                android:layout_marginEnd="15dp"
                android:background="@drawable/blue_stroke">


                <ImageView
                    android:id="@+id/img_minus"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_centerVertical="true"
                    android:background="?actionBarItemBackground"
                    android:padding="8dp"
                    android:src="@drawable/sub" />

                <TextView
                    android:id="@+id/txt_itemCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/img_plus"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_alignParentRight="true"
                    android:background="?actionBarItemBackground"
                    android:padding="8dp"
                    android:src="@drawable/add" />

            </RelativeLayout>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
