<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/cardRestaurant"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:layout_marginStart="10dp"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="#fff" />

        <View
            android:id="@+id/txtRestaurant"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/background"/>

        <TextView
            android:id="@+id/txtRestaurantTime"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_below="@+id/txtRestaurant"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
           android:background="@color/background" />



        <RelativeLayout
            android:id="@+id/relForward"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="#49303233">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:background="@color/background"/>

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="#fff" />

        <View
            android:id="@+id/txtGroceries"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/background"/>

        <TextView
            android:id="@+id/txtGroTime"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_below="@+id/txtGroceries"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/background" />

        <RelativeLayout
            android:id="@+id/relGroceriesForward"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="#49303233">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:background="@color/background"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
