<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relFavourite"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="3dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:translationZ="5dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgSubCat"
                android:layout_width="140dp"
                android:layout_height="160dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:background="@color/background"
                />



            <LinearLayout
                android:layout_toRightOf="@+id/imgSubCat"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtOffer"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/imgOffers"
                    android:text=""
                    android:textColor="#222"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:background="@color/background"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/txtType"
                    android:layout_below="@+id/txtOffer"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/imgOffers"
                    android:text=""
                    android:background="@color/background"
                    android:textColor="@color/dark"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:visibility="visible" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:weightSum="3">

                    <RelativeLayout
                        android:id="@+id/relOffer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <ImageView
                            android:id="@+id/imgOffers"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:padding="2dp"
                            android:background="@color/background"
                           />


                        <TextView
                            android:id="@+id/txtRating"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgOffers"
                            android:text=""
                            android:background="@color/background"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:layout_marginRight="10dp"
                        android:background="@color/background"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:layout_marginRight="5dp"
                        android:background="@color/background"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_below="@+id/imgSubCat"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/imgSubCat"
                android:layout_marginLeft="5dp"
                android:background="#dbdbdb"/>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
